<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  
    <persistence-unit name="SourceteamPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>java:app/jdbc/sourceteam</jta-data-source>
    <class>co.edu.uniandes.sourceteam.entities.BoletaEntity</class>
    <class>co.edu.uniandes.sourceteam.entities.ClienteEntity</class>
    <class>co.edu.uniandes.sourceteam.entities.CriticoEntity</class>
    <class>co.edu.uniandes.sourceteam.entities.FestivalEntity</class>
    <class>co.edu.uniandes.sourceteam.entities.FuncionEntity</class>
    <class>co.edu.uniandes.sourceteam.entities.PeliculaEntity</class>
    <class>co.edu.uniandes.sourceteam.entities.SalaEntity</class>
    <class>co.edu.uniandes.sourceteam.entities.SillaEntity</class>
    <class>co.edu.uniandes.sourceteam.entities.TeatroEntity</class>
    <properties>
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
      <property name="eclipselink.cache.type.default" value="NONE"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit> 
</persistence>

